{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@india-boundary-corrector/data": ["./packages/data/index.d.ts"],
      "@india-boundary-corrector/layer-configs": ["./packages/layer-configs/src/index.d.ts"],
      "@india-boundary-corrector/tilefixer": ["./packages/tilefixer/src/index.d.ts"],
      "@india-boundary-corrector/leaflet-layer": ["./packages/leaflet-layer/src/index.d.ts"],
      "@india-boundary-corrector/openlayers-layer": ["./packages/openlayers-layer/src/index.d.ts"],
      "@india-boundary-corrector/maplibre-protocol": ["./packages/maplibre-protocol/src/index.d.ts"],
      "@india-boundary-corrector/service-worker": ["./packages/service-worker/src/index.d.ts"]
    }
  },
  "include": [
    "packages/*/src/**/*.d.ts",
    "packages/*/index.d.ts",
    "type-tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
